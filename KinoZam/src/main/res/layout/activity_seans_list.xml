<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SeansListActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="83dp"
        android:background="#000000"
        android:id="@+id/dojoBanner"
        android:layout_gravity="center"
        android:layout_marginTop="-16dp"
            >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dojoLogoView"
            android:src="@drawable/logo_stronki"
            android:layout_gravity="center|bottom"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="centerInside"
            android:contentDescription="@string/opis_logo"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_gravity="bottom">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Kino"
                    android:id="@+id/kino"
                    android:layout_gravity="center|left"
                    android:autoText="false"
                    android:textColor="#CC0000"
                    android:focusableInTouchMode="false"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="ZambrÃ³w"
                    android:id="@+id/zambrow"
                    android:textColor="#FF4444"
                    android:focusableInTouchMode="true"
                    />
        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="right">

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/refresh"
                    android:background="@drawable/refresh"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"/>

            <Button
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/about"
                    android:background="@drawable/about"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"/>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button"
                    android:clickable="false"
                    android:background="@drawable/search"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="366dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="#0099cc">
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#77777e">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/imageView"
            android:src="@android:drawable/ic_menu_search"
            android:layout_gravity="center"
            android:scaleType="fitCenter"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/searchText"
            android:editable="true"
            android:enabled="true"
            android:focusable="true"
            android:nextFocusUp="@id/searchText"
            android:nextFocusLeft="@id/searchText"
            android:singleLine="true"/>

    </LinearLayout>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/listView"
        android:headerDividersEnabled="true"
        android:layout_centerInParent="true"/>

</LinearLayout>
