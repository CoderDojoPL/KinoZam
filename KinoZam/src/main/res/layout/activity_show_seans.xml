<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:background="#555555">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:id="@+id/scrollView2">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:id="@+id/imageView"
                    android:padding="10dp"
                    android:scaleType="centerCrop"/>
            </ScrollView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="#323232">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/titleTextView"
                    android:layout_gravity="center|left"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Small Text"
                            android:id="@+id/dateTextView"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:gravity="center_vertical|left"
                            android:layout_marginLeft="@dimen/activity_vertical_margin"/>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Small Text"
                            android:id="@+id/timeTextView"
                            android:paddingBottom="10dp"
                            android:gravity="center_vertical|right"
                            android:layout_marginRight="@dimen/activity_vertical_margin"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <WebView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/descriptionTextView"
                android:layout_gravity="center"
                android:text="Seans Description"
                android:clickable="false"
                android:background="#555555"
                style="color:white;"
                />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingBottom="20dp"
                android:id="@+id/linearLayout"
                android:visibility="gone">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="fill_parent"
                    android:text="Przeczytaj recenzjÄ™"
                    android:id="@+id/textView5"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"/>

                <ImageButton
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/recenzjaButton"
                    android:src="@drawable/recenzja"
                    android:background="#010101"
                    android:layout_gravity="center_horizontal|top"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#ff0004"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/telButton"
            android:src="@drawable/call"
            android:background="#ff0509"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/trailerButton"
            android:background="#ff0509"
            android:src="@drawable/play"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/linkButton"
            android:src="@drawable/kino_link"
            android:background="#ff0509"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

    </LinearLayout>


</LinearLayout>